using System.ComponentModel.DataAnnotations;
using System.Text.Json.Serialization;

namespace api.DTOs.Survey
{
    public class SurveyResponseDto
    {
        public int ResponseId { get; set; }
        public string? RespondentId { get; set; }
        public DateTime SubmittedAt { get; set; }
        public List<SurveyAnswerDto> Answers { get; set; } = new();
    }

    public class SurveyAnswerDto
    {
        public int? QuestionId { get; set; } // sửa thành int? để tương thích với Answer
        public string QuestionContent { get; set; } = null!;
        public string? AnswerContent { get; set; } // Nội dung đáp án hiển thị
        public string QuestionTypeCode { get; set; } = null!; // Thêm trường loại câu hỏi
    }
}
