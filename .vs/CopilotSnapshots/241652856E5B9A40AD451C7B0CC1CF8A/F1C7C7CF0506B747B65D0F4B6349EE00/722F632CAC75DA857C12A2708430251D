using api.DTOs.User;
using api.Interfaces.IRepositories;
using api.Interfaces.IServices;
using api.Repositories;

namespace api.Services
{
    public class UserService : IUserService
    {
        private readonly IUserRepository _repo;

        public UserService(IUserRepository repo)
        {
            _repo = repo;
        }

        public Task<IEnumerable<UserDto>> GetAllUserAsync() => _repo.GetAllUserAsync();
        public Task<UserDto> CreateUserAsync(CreateUserDto dto) => _repo.CreateUserAsync(dto);

        public async Task<UserDto> UpdateUserAsync(string id, UpdateUserDto dto)
        {
            return await _repo.UpdateUserAsync(id, dto);
        }

        public async Task<bool> DeleteUserAsync(string id)
        {
            return await _repo.DeleteUserAsync(id);
        }

        public async Task<UserDto> SetUserActiveStatusAsync(string id, bool isActive)
        {
            return await _repo.SetUserActiveStatusAsync(id, isActive);
        }
    }
}
