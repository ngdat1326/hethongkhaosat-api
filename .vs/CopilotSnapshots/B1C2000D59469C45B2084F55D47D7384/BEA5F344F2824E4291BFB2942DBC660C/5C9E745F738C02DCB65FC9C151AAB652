using System.ComponentModel.DataAnnotations;

namespace api.DTOs.Survey
{
    public class SubmitSurveyResultDto
    {
        [Required]
        public int SurveyId { get; set; }
        public string? RespondentId { get; set; }
        public List<SubmitAnswerDto> Answers { get; set; } = new();
    }

    public class SubmitAnswerDto
    {
        [Required]
        public int QuestionId { get; set; }
        public int? OptionId { get; set; } // SingleChoice
        public string? TextAnswer { get; set; } // Text, Scale
        public string? ExtraOptionIds { get; set; } // MultiChoice (JSON chu?i các OptionId)
    }
}
