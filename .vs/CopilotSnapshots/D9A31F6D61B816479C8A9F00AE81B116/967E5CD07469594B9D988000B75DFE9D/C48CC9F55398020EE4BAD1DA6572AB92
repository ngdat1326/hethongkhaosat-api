using System.ComponentModel.DataAnnotations;
using System.ComponentModel.DataAnnotations.Schema;

namespace api.Models
{
    public class Answer
    {
        [Key]
        public int Id { get; set; }
        [ForeignKey("Response")]
        public int ResponseId { get; set; }
        public Response Response { get; set; } = null!;
        [ForeignKey("Question")]
        public int QuestionId { get; set; } // int không nullable để phù hợp Cascade
        public Question Question { get; set; } = null!;
        [ForeignKey("Option")]
        public int? OptionId { get; set; } // chuyển lại về int? để phù hợp SetNull
        public Option? Option { get; set; } = null!;
        [MaxLength(1000)]
        public string? TextAnswer { get; set; } // dùng cho Text, Scale
        public string? ExtraOptionIds { get; set; } // dùng cho MultiChoice (JSON chuỗi các OptionId)
        [MaxLength(1000)]
        public string? QuestionContent { get; set; } // Lưu nội dung câu hỏi tại thời điểm trả lời
    }
}
